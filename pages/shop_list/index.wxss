/* pages/shop-list/index.wxss */

.mapContainer {
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content: center;
}
.mapContainer #myMap {
  width: 100%;
  height:100%;
}

.mapContainer #myMap .controls{
  position: fixed;
  width:100%;
  bottom:12rpx;
  height:516rpx;
  padding:0 12rpx;
}
.mapContainer .infocontainer{
  width:725rpx;
  height:100%;
  background: #fff;
}


.infocontainer .infoTop .image{
  width:725rpx;
  height:334rpx;
}
.infocontainer .infoMiddle{
  display: flex;
  justify-content: space-between;
  padding:0 20rpx;
}
.infocontainer .infoMiddle .shopName{
  display: inline-block;
  width:384rpx;
  font-size:32rpx;
  margin-top:25rpx;
  color:#444;
  white-space: pre-wrap;
}
.infocontainer .infoMiddle .shopInfo{
  display: flex;
  flex-direction:column;
  align-items:flex-end;
  justify-content: center;
}
.infoMiddle .shopInfo .bookStatus{
  display: inline-block;
  width:93rpx;
  height: 39rpx;
  line-height: 37rpx;
  text-align: center;
  color:#444;
  font-size: 24rpx;
  border:1rpx solid #666;
  box-sizing:border-box;
  border-radius: 4rpx;
  margin-top:25rpx;
}
.infoMiddle .shopInfo .rent{
  display: inline-block;
  font-size: 32rpx;
  color:#00ADA9;
}
.infocontainer .infobottom{
  display: flex;
  padding:0 20rpx;
}
.infocontainer .infobottom .btn{
  display: inline-block;
  width:127rpx;
  height:46rpx;
  line-height: 46rpx;
  text-align: center;
  color:#fff;
  background: #00ADA9;
  font-size:24rpx;
  border-radius: 4rpx;
  margin-top:19rpx;
  margin-right:10rpx;
}