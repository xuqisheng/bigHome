/* pages/shop-list/index.wxss */

.mapContainer {
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:flex-start;
}
.mapContainer .mapBox {
  width: 100%;
  height:691rpx;
  position:absolute;
  top:0;
  bottom:516rpx;
}
.mapContainer #myMap {
  width: 100%;
  height:100%;
}
.mapContainer .shopBox{
  width: 725rpx;
  height:516rpx;
  position:absolute;
  top:691rpx;
  left:50%;
  transform: translateX(-50%);
}

.swiper{
  height:100%;
  width:100%;
}
.mapContainer #myMap .currentCity{
  background:#fff;
  font-size:30rpx;
  position:fixed;
  right:40rpx;
  top:40rpx;
  display:inline-block;
  width:120rpx;
  height:50rpx;
  line-height:50rpx;
  border-radius:20rpx;
  padding-left:10rpx;
}
.mapContainer #myMap .currentCity::before{
  content: '';
  position: absolute;
  right:10rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 0;
  line-height: 0;
  border-width: 10rpx;
  border-color: #000;
  border-bottom-width: 0;
  border-style: dashed;
  border-top-style: solid;
  border-right-color: transparent;
  border-left-color: transparent;
}
.mapContainer #myMap .controls{
  position: fixed;
  width:100%;
  bottom:12rpx;
  height:516rpx;
  padding:0 12rpx;
}
.mapContainer .infocontainer{
  width:725rpx;
  height:100%;
  background: #fff;
}


.infocontainer .infoTop .image{
  width:725rpx;
  height:334rpx;
}
.infocontainer .infoMiddle{
  display: flex;
  justify-content: space-between;
  padding:0 20rpx;
}
.infocontainer .infoMiddle .shopName{
  display: inline-block;
  width:384rpx;
  font-size:32rpx;
  margin-top:25rpx;
  color:#444;
  white-space: pre-wrap;
}
.infocontainer .infoMiddle .shopInfo{
  display: flex;
  flex-direction:column;
  align-items:flex-end;
  justify-content: center;
}
.infoMiddle .shopInfo .bookStatus{
  display: inline-block;
  width:93rpx;
  height: 39rpx;
  line-height: 37rpx;
  text-align: center;
  color:#444;
  font-size: 24rpx;
  border:1rpx solid #666;
  box-sizing:border-box;
  border-radius: 4rpx;
  margin-top:25rpx;
}
.infoMiddle .shopInfo .rent{
  display: inline-block;
  font-size: 32rpx;
  color:#00ADA9;
}
.infocontainer .infobottom{
  display: flex;
  padding:0 20rpx;
}
.infocontainer .infobottom .btn{
  display: inline-block;
  width:127rpx;
  height:46rpx;
  line-height: 46rpx;
  text-align: center;
  color:#fff;
  background: #00ADA9;
  font-size:24rpx;
  border-radius: 4rpx;
  margin-top:19rpx;
  margin-right:10rpx;
}