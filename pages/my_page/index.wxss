/* pages/my_page/my_page.wxss */
page{
  background:#D3D3D3 ;
  margin:0
}
.my_container{
  display: flex;
  flex-direction: column;
  padding: 0px;
  margin: 0px;
  height: 100%;
  width: 100%;
  background:#D3D3D3 ;
  position: relative;
}
.land{
  width: 100%;
  height: 370rpx;
  z-index: 999;
  position: relative;
  display: flex;
  flex-direction: row
}
.city{
  position: absolute;
  left: 0;
  top: -113rpx;
  width: 100%;
  height: 483rpx
}
 .heart{
  width: 168rpx;
  height: 168rpx;
  overflow:hidden;
  display: block;
  border-radius: 50%;
  margin: 51rpx 0 0 47rpx;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.landing{
  color: #fff;
  margin-top: 81rpx;
  margin-left: 37rpx;
  display: flex;
  flex-direction: column
}
.landingName{
   font-size: 36rpx;
}

.phoneText{
  height:39rpx;
  background: rgba(21,142,138,1);
  font-size: 24rpx;
  margin-top: 10rpx;
  color:#fff;
  line-height: 40rpx;
  text-align: center;
  border-radius: 10rpx;
  padding: 0 20rpx;
}
.option{
  margin: -129rpx 29rpx 29rpx 29rpx;
  height: 100%;
  z-index: 999;
  display: flex;
  flex-direction: column
}
.collection{
  background:#fff;
  border-radius: 4px;
  height: 239rpx;
  display: flex;
  flex-direction: column
}
.look{
  display: flex;
  flex-direction: row;
  max-height: 120rpx;
  min-height: 120rpx;
  justify-content: space-between;
  position: relative
}
.look image{
  width: 48rpx;
  height: 46rpx;
  margin: 42rpx 32rpx 0 40rpx
}
.look text{
  color: #444444;
  font-size: 32rpx;
  position: absolute;
  top: 38rpx;
  left: 120rpx
}
.collection:nth-of-type(n + 2){
  margin-top: 48rpx;
}
.collection:last-child{
   height: 120rpx;
}

.log-off{
  width:689rpx;
  height:98rpx;
  background: #fff;
  border-radius:4px;
  text-align: center;
  line-height: 98rpx;
  color: rgba(21,142,138,1);
  margin:19rpx auto 0;
}