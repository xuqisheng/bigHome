/* pages/cardBag_page/cardBag_page.wxss */

.containerCar {
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
}

.containerCar image{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.nav {
  width: 100%;
  height: 40px;
  display: flex;
  line-height: 40px;
  z-index: 999;
}

.default {
  line-height: 40px;
  text-align: center;
  flex: 1;
  border-right: 1px solid gainsboro;
  color: #000;
  font-weight: bold;
  font-size: 15px;
}

.red {
  line-height: 40px;
  text-align: center;
  color: #3aa1d5;
  flex: 1;
  border-right: 1px solid gainsboro;
  font-weight: bold;
  font-size: 15px;
}

.show {
  display: block;
  text-align: center;
  line-height: 200rpx;
  z-index: 999;
}

.noTime image{
  width: 278px;
  height: 111px;
  margin: 20% auto;
  position: absolute;
  left: 0;
  top: 10%;
  right: 0;
  bottom: 0;
}

.noTime text{
   position: absolute;
   left: 42%;
   top: 36%;
   color: #999999;
   font-size: 16px;
}

.hidden {
  display: none;
  text-align: center;
  line-height: 200px;
  z-index: 999;
}

.see {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 48px;
  background: skyblue;
  text-align: center;
  line-break: 48px;
  color: #fff;
  z-index: 999;
}

.see p {
  line-height: 48px;
  font-size: 15px;
}

