/* pages/yyresult/yyresult.wxss */
.contant{
  display: flex;
  flex-direction: column
}
.head{
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding:130rpx 0  60rpx 0;
  border-bottom: 20rpx solid #eee;
}
.img1{
  width: 248rpx;
  height: 216rpx;
  margin-left: 50%;
  transform: translate(-50%);
  z-index: 100
}
.img2{
  position: absolute;
  left: 0;
  bottom: 110rpx;
  width: 100%;
  height: 56%;
}
.su{
  text-align: center;
  padding-top: 62rpx;
  font-size: 32rpx;
  color: #444;
  z-index: 99;
}
.btns{
  display: flex;
  flex-direction: row;
  padding-top:30rpx;
  margin:20rpx 45rpx;
}
.btn{
  width: 200rpx;
  height: 70rpx;
  font-size: 32rpx;
  color: #999;
  background-color: #fff;
  line-height: 70rpx;
}
.btn:nth-child(2){
  color: #fff;
  background-color: #00ADA9;
}
.btnc{
  opacity: .7
}
.info{
  font-size: 28rpx;
  color: #999;
  display: flex;
  flex-direction: column;
  margin:60rpx 40rpx 0 82rpx;
  width: 100%
}
.txt{
  display: flex;
  flex-direction: row;
}
.txt > text{
  margin-top: 10rpx
}
.txt > text:nth-of-type(1){
  width: 120rpx
}