/* pages/select_city/index.wxss */
.select_city{
  width: 100%;
  height:100%;
}
::-webkit-scrollbar{
  width:0;
  height:0;
  color:transparent;
}
.select_city .list-box{
  white-space: nowrap;
  box-sizing: border-box;
  position: absolute;
  top:0;
  bottom:0;
  overflow: auto;
}
.list-box .list-group {
  position:relative;
}
.select_city .list-group .list-group-title{
  position:relative;
  background: #F4F4F4;
  height:80rpx;
}
.select_city .list-group .localAdress{
  position:relative;
}
.select_city .list-group .localAdress image{
  position:absolute;
  width:37rpx;
  height:37rpx;
  left:30rpx;
  top: 50%;
  transform: translateY(-50%);
}
.select_city .list-group .localAdress .refresh{
  height:100rpx;
  position:absolute;
  top:0;
  left:261rpx;
  width:150rpx;
}
.select_city .list-group .localAdress .refresh image{
  width:24rpx;
  height:24rpx;
  left:0;
}
.select_city .list-group .localAdress .refresh text{
  position:absolute;
  left:38rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size:24rpx;
  font-family:FZY3JW--GB1-0;
  font-weight:400;
  color:rgba(0,173,169,1);
}
.select_city .list-group .localAdress .list-group-item .name{
  padding-left:101rpx;
}
.list-group .list-group-title .title{
  position: absolute;
  height:80rpx;
  bottom:0;
  color:#A8A8A8;
  line-height: 80rpx;
  text-align: center;
  left:30rpx;
  font-size:24rpx;
}
.select_city .list-box .historyClass .list-group-items {
  padding:0 30rpx;
  display: flex;
  justify-content: flex-start;
  align-content:flex-start;
  flex-flow:row wrap;
  background: #F4F4F4;
}
  .select_city .list-box .historyClass .list-group-item{
    margin-right:70rpx;
  }
.select_city .list-box .historyClass .list-group-item .name{
  
  height:51rpx;
  background:rgba(255,255,255,1);
  border-radius:25rpx;
  line-height: 51rpx;
  text-align: center;
  margin-bottom:33rpx;
  padding:0 20rpx;
}
.list-group .list-group-item .name{
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
  border-top:1px solid rgb(232,231,242);
  width:100%;
  padding-left:30rpx;
  color:#444444;
  font-size:30rpx;
}

.list-group .list-group-item .first{
  border-top:none;
}

.list-box .list-shortcut{
  position: fixed;
  z-index: 30;
  right: 20rpx;
  top: 50%;
  font-size: 22rpx;
  transform: translateY(-50%);
  width: 50rpx;
  padding: 20rpx 0;
  border-radius: 10px;
  text-align: center;
  color:#00ADA9;
}
.list-shortcut .item{
  height:40rpx;
}