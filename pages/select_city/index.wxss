/* pages/select_city/index.wxss */
.select_city{
  width: 100%;
  height:100%;
}
::-webkit-scrollbar{
  width:0;
  height:0;
  color:transparent;
}
.select_city .list-box{
  white-space: nowrap;
  box-sizing: border-box;
  position: absolute;
  top:0;
  bottom:0;
  overflow: auto;
}
.list-box .list-group {
  position:relative;
}
.select_city .list-group .list-group-title{
  position:relative;
  background: rgb(246,246,246);
  height:80rpx;
}
.list-group .list-group-title .title{
  position: absolute;
  padding:0 20rpx;
  background:rgb(232,231,242);
  height:60rpx;
  bottom:0;
  color:rgb(136,136,136);
  line-height: 60rpx;
  text-align: center;
  border-radius: 4rpx;
  left:30rpx;
}
.select_city .list-box .historyClass .list-group-items {
  padding:30rpx;
  display: flex;
  justify-content: flex-start;
  align-content:flex-start;
  flex-flow:row wrap;
}
.select_city .list-box .historyClass .list-group-item .name{
  height:60rpx;
  width:200rpx;
  line-height: 60rpx;
  text-align: center;
  padding:0rpx;
  border:1px solid rgb(232,231,242);
}
.list-group .list-group-item .name{
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
  border-top:1px solid rgb(232,231,242);
  width:100%;
  padding-left:30rpx;
  color:rgb(136,136,136);
}

.list-group .list-group-item .first{
  border-top:none;
}

.list-box .list-shortcut{
  position: fixed;
  z-index: 30;
  right: 10rpx;
  top: 50%;
  font-size: 24rpx;
  transform: translateY(-50%);
  width: 50rpx;
  padding: 20rpx 0;
  border-radius: 10px;
  text-align: center;
  background: rgb(232,231,242);
  color:rgb(136,136,136);
}
.list-shortcut .item{
  height:20px;
}