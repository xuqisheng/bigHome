  margin-right: 32rpx
}
.info{
  display: flex;
  flex-direction: column;
}
.info text:nth-child(1){
  font-size: 32rpx;
  color: #444;
  margin-top: 24rpx
}
.info text:nth-child(2){
  font-size: 28rpx;
  color: #999;
  margin-top: 28rpx
}
.info text:nth-child(3){
  font-size: 34rpx;
  color: #00ADA9;
  margin-top: 51rpx
}
.address {
  margin:20rpx 34rpx 10rpx
}

.address p:nth-child(1) {
  font-size: 32rpx;
  color: #444;
  font-weight: bold;
}

.men {
  font-size: 28rpx;
  color: #444;
  margin-top: 20rpx;
  margin-left: 16rpx;
}

.phone{
  width: 30rpx;
  height: 25rpx;
}
.localimg {
  width: 25rpx;
  height: 35rpx;
  margin-left: 2rpx
}

.men span {
  color: #00ada9;
}

.men p {
  padding-left: 20rpx;
}
.men:nth-child(3) p{
  margin-left: 2rpx;
}
.men:nth-child(3) span{
  color: #444
