.maps {
  width: 100%;
  height: 356rpx;
  margin: auto;
  margin-top: 20px;
}

.mores {
  display: block;
  font-size: 24rpx;
  color: #d1d1d1;
  text-align: center;
  padding-top: 30px;
  padding-bottom: 10px;
}

.btns{
  width: 100%;
  height: 98rpx;
