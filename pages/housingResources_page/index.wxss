/* 下拉列表的样式 */

.housingResources {
  display: flex;
  flex-direction: column;
  padding: 0px;
  margin: 0px;
  width: 100%;
  height: 100%;
  min-height: 100vh
}

.moneySort {
  width: 100%;
  float: left;
  background: #fff;
  z-index: 1001;
}

.bgs {
  width: 100%;
  height: 100%;
  position: fixed;
  background: transparent;
  z-index: 999;
}

.nav-son {
  /* 让下拉提示信息永远放于下拉内容的上面 */
  border-bottom: 1px solid #d1d3d4;
  height: 40px;
  text-align: center;
  line-height: 40px;
  font-size: 18px;
  width: 50%;
  float: left;
  color: #444;
  font-size: 15px;
  font-weight: bold;
  z-index: 1001;
}

/* 下拉框的样式 */

.temp {
  /* 默认为不显示 */
  display: none;
  /* 下拉框的宽度， */
  width: 100%;
  /* 下拉框的最大高度 */
  max-height: 750rpx;
  overflow-y: scroll;
  padding: 0 0 0 20rpx;
  line-height: 100rpx;
  background: #fff;
  position: absolute;
  top: 41px;
  z-index: 1000;
  border-bottom: #d1d1d1 solid 1px;
}

.temp label {
  color: #444;
  font-size: 16px;
  display: block;
  text-align: center;
}

.temp label text {
  display: inline-block;
  width: 160px;
  height: 13px;
}

/* 下拉框内容的样式 */

.temp view {
  font-size: 14px;
  color: #444;
  font-size: 16px;
  text-align: center;
}

/* 下拉动画 */

/* @keyframes Css3 新标签，循环动画 */

@keyframes slidown {
  from {
    transform: translateY(-100%);
  }

  to {
    transform: translateY(0%);
  }
}

.slidown {
  display: block;
  animation: slidown 0.2s ease-in both;
}

/* 上拉动画 */

@keyframes slidup {
  from {
    transform: translateY(0%);
  }

  to {
    transform: translateY(-100%);
  }
}

.slidup {
  display: block;
  animation: slidup 0.2s ease-in both;
}

