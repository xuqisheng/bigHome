<view class="housingResources">
  <view class='moneySort'>
    <!-- 价格 -->
    <view class="nav-son" bindtap="money">
      <view style='position: relative'>价格
        <span class="jianShang" wx:if="{{shang}}"></span>
        <span class="jianXia" wx:if="{{xia}}"></span>
      </view>
    </view>
    <!-- 排序 -->
    <view class="nav-son" bindtap="sort">
      <view style='position: relative'>排序
        <span class="jianShang" wx:if="{{shangs}}"></span>
        <span class="jianXia" wx:if="{{xias}}"></span>
      </view>
    </view>

  </view>
  <!-- 下拉选择框 -->
  <radio-group class="temp {{pxopen ? 'slidown' : 'slidup'}} {{pxshow ? 'disappear':''}}">
    <label class="radio" wx:for="{{content}}" wx:key='item' bindtap='cIndex' data-index='{{index}}' >
      <text>{{item}}</text>
      <radio />
    </label>
  </radio-group>

  <radio-group class="temp {{pxopens ? 'slidown' : 'slidup'}} {{pxshows ? 'disappear':''}}">
    <label class="radio" wx:for="{{contents}}" wx:key='item'>
      {{item}}
      <radio />
    </label>
  </radio-group>
  <!--catchtouchmove='true' ,蒙版出现时禁止滑动-->
  <view class='bgs' wx:if="{{hidden}}" catchtouchmove='true'></view>

  <view class='house' wx:for='{{hotelListData}}' wx:key='index'>
    <image src='../../images/housingResources_page/di.png' class="di"></image>
    <p class="pt">{{item.hotelName}}
      <text class="yue">￥{{item.startingPrice}}/月起</text>
    </p>
    <p class="fang">{{item.roomTypeSum}}个房型/剩余{{item.roomSum}}套房源</p>
    <view class="xiangxi">
      <image src='../../images/housingResources_page/bi.png' class="bi"></image>
      <p class="xiang" wx:if='{{item.breafIntroduction}}'>{{item.breafIntroduction}}</p>
      <p class="xiang" wx:if='{{!item.breafIntroduction}}'>这款房比较神秘，需要您实地去探索</p>
    </view>
    <view class='locations'>
      <text wx:for='{{item.tags}}' wx:key='index'>{{item}}</text>
    </view>
  </view>
</view>