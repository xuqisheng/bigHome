/* pages/yk/yk.wxss */

page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
  padding-top: 60px;
  text-align: center;
}

.weui-navbar__item {
  color: #999;
  padding: 5px 0;
  background-color:#fff;
}

.weui-navbar__item.weui-bar__item_on {
  color: #00ADA9;
}

.weui-navbar__slider {
  position: absolute;
  content: " ";
  left: 0;
  bottom: 0;
  width: 46px;
  height: 3px;
  background-color: #00ADA9;
  -webkit-transition: -webkit-transform 0.3s;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}
.weui-navbar{
 border-bottom: none;
}
.weui-tab__panel{
  padding-top: 34px;
}
.weui-tab__content {
  padding-top:0px;
  text-align: left;
}
.panel__container{
    border-top:12rpx solid #EEE;
    display: flex;
    flex-direction: column;
}
.panel__container:first-child{
  padding-top: 0
}
.panel_info_state{
  display: flex;
  flex-direction: column;
  margin: 0 25rpx;
  position: relative;
}
.panel_info{
  color: #999;
  font-size: 24rpx;
  padding-top: 30rpx;
}
.panel_info:nth-child(3){
  padding-top: 0;
  /* margin-top: -10rpx; */
}
.panel_state{
  position: absolute;
  top:40rpx;
  right: 0;
  color: #ff4545;
  font-size: 28rpx;
}
.panel_detail{
  display: flex;
  flex-direction: row;
  margin-left: 25rpx;
}
.panel_img{
  position: relative;
  margin-top: 10rpx;
  padding-right: 30rpx;
  max-width: 240rpx;
  min-width: 240rpx;
  height: 200rpx;
}
.panel_detail_info{
  position: relative;
  margin-top: 10rpx;
  margin-right: 25rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
}
.panel__name{
  font-size: 28rpx;
  text-align: left;
}
.panel_icon1{
  position: absolute;
  /* bottom: 40rpx; */
  left: 4rpx;
  min-width: 22rpx;
  max-width: 22rpx;
  min-height: 30rpx;
  max-height: 30rpx;
}
.panel_local{
  position: absolute;
  bottom: 40rpx;
  padding-left: 50rpx;  
  color: #999;
  font-size: 24rpx;
  text-align:left;
  line-height: 32rpx;
}
.panel_icon2{
  position: absolute;
  bottom: 2rpx;
  min-width: 30rpx;
  max-width: 30rpx;
  min-height: 26rpx;
  max-height: 26rpx;
}

.panel_type{
  position: absolute;
  bottom: -3rpx;
  font-size: 24rpx;
  padding-left:50rpx;  
}
.cutline{
 margin:20rpx  0 0 25rpx;
 padding: 10rpx 0;
 width: calc(100% - 50*1rpx);  
 height: 1px;
}
.btn_group{
  padding: 12rpx 0 15rpx 0;
  margin-right: 25rpx;
}
.panel_btn,.panel_btn_f{
  width: 120rpx;
  min-width: 60px;
  height: 46rpx;  
  padding: 3rpx;
  margin-left: 13rpx;
  background-color: #fff;
  float: right;
  border: #00ADA9 .5px solid;
  color: #00ADA9;
  font-size: 24rpx;
  line-height: 40rpx;
  vertical-align: middle;
  text-align: center;
  border-radius: 5px;
}
.panel_btn_f{
  color: #fff;
  background-color: #00ADA9;
}
.btn_hover{
  opacity: .7
}
.btn_hover1{
  opacity: .7;
  color: rgb(236, 236, 236);
}

.panel__nomore{
  position: absolute;
  width: 100%;
  height: calc(100% - 34*1pt); 
  text-align: center;
}
.panel__nomore image:nth-child(1){
  position: relative;
  z-index: 100;
  width: 277rpx;
  height: 218rpx;
  margin-top: 30%;
}
.panel__nomore image:nth-child(3){
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.none_text{
  position: relative;
  z-index: 100;
  font-size: 28rpx;
  color: #999999;
}