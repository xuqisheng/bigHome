/* pages/yk/yk.wxss */
.weui-tab {
  position: relative;
  height: 100%;
}
.weui-tab__panel {
  box-sizing: border-box;
  height: 100%;
  padding-top: 50px;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}
.weui-navbar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: absolute;
  z-index: 500;
  top: 0;
  width: 100%;
  border-bottom: 1rpx solid #CCCCCC;
}
.weui-navbar__item {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding: 13px 0;
  text-align: center;
  font-size: 0;
}
.weui-navbar__item.weui-bar__item_on {
  color: #1AAD19;
}
.weui-navbar__slider {
  position: absolute;
  content: " ";
  left: 0;
  bottom: 0;
  width: 6em;
  height: 3px;
  background-color: #1AAD19;
  -webkit-transition: -webkit-transform .3s;
  transition: -webkit-transform .3s;
  transition: transform .3s;
  transition:  -webkit-transform .3s;
}
.weui-navbar__title {
  display: inline-block;
  font-size: 15px;
  max-width: 8em;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}

page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
  padding-top: 60px;
  text-align: center;
}

.weui-navbar__item {
  color: #999;
  padding: 5px 0;
  background-color: #fff;
}

.weui-navbar__item.weui-bar__item_on {
  color: #00ada9;
}

.weui-navbar__slider {
  position: absolute;
  content: " ";
  left: 0;
  bottom: 0;
  width: 46px;
  height: 3px;
  background-color: #00ada9;
  -webkit-transition: -webkit-transform 0.3s;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: -webkit-transform 0.3s;
}

.weui-navbar {
  border-bottom: none;
}

.weui-tab__panel {
  padding-top: 34px;
}

.weui-tab__content {
  padding-top: 0px;
  text-align: left;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 998;
  opacity: 0.7;
}

.ccbox {
  position: fixed;
  z-index: 999;
  width: 80%;
  height: 300rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: #eee solid 1px;
  background-color: #fff;
  border-radius: 5px;
}

.tbox {
  position: relative;
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

.tbox text:first-child {
  margin-top: 40rpx;
}

.tbox text:last-child {
  margin-top: 60rpx;
}

.cc-cx {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 75rpx;
  border-top: #eee solid 1px;
  display: flex;
  flex-direction: row;
}

.cc-cx button {
  font-size: 28rpx;
  color: #999;
  width: 50%;
  border-radius: 0px;
  background-color: #fff;
}

.cc-cx button:last-child {
  border-left: #eee solid 1px;
  color: #00be00;
}

.cc-b-h {
  opacity: 0.7;
  background-color: #f7f7f7 !important;
}

.cc-cx button::after {
  border: none;
}

.panel__container {
  border-top: 12rpx solid #eee;
  display: flex;
  flex-direction: column;
}

.panel__container:first-child {
  padding-top: 0;
}

.panel_info_state {
  display: flex;
  flex-direction: column;
  margin: 0 25rpx;
  position: relative;
}

.panel_info {
  color: #999;
  font-size: 24rpx;
  padding-top: 30rpx;
}

.panel_info:nth-child(3) {
  padding-top: 0;
}

.panel_state {
  position: absolute;
  top: 40rpx;
  right: 0;
  color: #ff4545;
  font-size: 28rpx;
}

.panel_detail {
  display: flex;
  flex-direction: row;
  margin-left: 25rpx;
}

.panel_img {
  position: relative;
  margin-top: 10rpx;
  padding-right: 30rpx;
  max-width: 240rpx;
  min-width: 240rpx;
  height: 200rpx;
}

.panel_detail_info {
  position: relative;
  margin-top: 10rpx;
  margin-right: 25rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.panel__name {
  font-size: 28rpx;
  text-align: left;
}

.panel_icon1 {
  position: absolute;
  /* bottom: 40rpx; */
  left: 4rpx;
  min-width: 22rpx;
  max-width: 22rpx;
  min-height: 30rpx;
  max-height: 30rpx;
}

.panel_local {
  position: absolute;
  bottom: 40rpx;
  padding-left: 50rpx;
  color: #999;
  font-size: 24rpx;
  text-align: left;
  line-height: 32rpx;
}

.panel_icon2 {
  position: absolute;
  bottom: 2rpx;
  min-width: 30rpx;
  max-width: 30rpx;
  min-height: 26rpx;
  max-height: 26rpx;
}

.panel_type {
  position: absolute;
  bottom: -3rpx;
  font-size: 24rpx;
  padding-left: 50rpx;
}

.cutline {
  width: -webkit-calc(100% - 50rpx*1);
  width: calc(100% - 50rpx*1);
  margin: 30rpx auto 10rpx auto;
  height: 1px;
}

.btn_group {
  padding: 12rpx 0 15rpx 0;
  margin-right: 25rpx;
}

.panel_btn, .panel_btn_f {
  width: 120rpx;
  min-width: 120rpx;
  height: 46rpx;
  padding: 3rpx;
  margin-left: 13rpx;
  background-color: #fff;
  float: right;
  color: #00ada9;
  font-size: 24rpx;
  line-height: 40rpx;
  vertical-align: middle;
  text-align: center;
  border-radius: 3px;
}

.panel_btn::after, .panel_btn_f::after {
  border: #00ada9 1px solid !important;
}

.panel_btn_f {
  color: #fff;
  background-color: #00ada9;
}

.btn_hover {
  opacity: 0.7;
}

.btn_hover1 {
  opacity: 0.7;
  color: rgb(236, 236, 236);
}

#map {
  width: 0;
  height: 0;
  position: absolute;
  left: 25rpx;
  opacity: 0;
}

.panel__nomore {
  position: absolute;
  width: 100%;
  height: -webkit-calc(100% - 34*1pt);
  height: calc(100% - 34*1pt);
  text-align: center;
}

.panel__nomore image:nth-child(1) {
  position: relative;
  z-index: 100;
  width: 277rpx;
  height: 218rpx;
  margin-top: 30%;
}

.panel__nomore image:nth-child(3) {
  position: fixed;
  width: 100%;
  height: 100%;
  bottom: 0;
  left: 0;
  right: 0;
}

.none_text {
  position: relative;
  z-index: 100;
  font-size: 28rpx;
  color: #999;
}

