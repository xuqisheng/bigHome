/* pages/yk/yk.wxss */

page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
  padding-top: 60px;
  text-align: center;
}

.weui-navbar__item {
  color: #999;
  padding: 5px 0;
  background-color:#fff;
}

.weui-navbar__item.weui-bar__item_on {
  color: #00ADA9;
}

.weui-navbar__slider {
  position: absolute;
  content: " ";
  left: 0;
  bottom: 0;
  width: 46px;
  height: 3px;
  background-color: #00ADA9;
  -webkit-transition: -webkit-transform 0.3s;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}
.weui-navbar{
 border-bottom: none;
}
.weui-tab__panel{
  padding-top: 34px;
}
.weui-tab__content {
  padding-top:0px;
  text-align: left;
}
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 998;
  opacity: 0.7;
}
.ccbox{
  position: fixed;
  z-index: 999;
  width: 80%;
  height: 300rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border: #EEE solid 1px;
  background-color: #fff;
  border-radius: 5px;
}
.tbox{
  position: relative;
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 28rpx;
  color: #999999; 
}
.tbox text:first-child{
  margin-top: 40rpx;
}
.tbox text:last-child{
  margin-top: 60rpx;
}
.cc-cx{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 75rpx;
  border-top: #EEE solid 1px;
  display: flex;
  flex-direction: row;
}
.cc-cx button{
    font-size: 28rpx;
    color: #999;
    width: 50%;
    border-radius: 0px;
    background-color: #fff;
}
.cc-cx button:last-child{
  border-left: #eee solid 1px;
  color: #00BE00
}
.cc-b-h{
  opacity: .7;
  background-color: #f7f7f7!important;
}
.cc-cx button::after{
  border: none;
}
.panel__container{
    border-top:12rpx solid #EEE;
    display: flex;
    flex-direction: column;
}
.panel__container:first-child{
  padding-top: 0
}
.panel_info_state{
  display: flex;
  flex-direction: column;
  margin: 0 25rpx;
  position: relative;
}
.panel_info{
  color: #999;
  font-size: 24rpx;
  padding-top: 30rpx;
}
.panel_info:nth-child(3){
  padding-top: 0;
  /* margin-top: -10rpx; */
}
.panel_state{
  position: absolute;
  top:40rpx;
  right: 0;
  color: #ff4545;
  font-size: 28rpx;
}
.panel_detail{
  display: flex;
  flex-direction: row;
  margin-left: 25rpx;
}
.panel_img{
  position: relative;
  margin-top: 10rpx;
  padding-right: 30rpx;
  max-width: 240rpx;
  min-width: 240rpx;
  height: 200rpx;
}
.panel_detail_info{
  position: relative;
  margin-top: 10rpx;
  margin-right: 25rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
}
.panel__name{
  font-size: 28rpx;
  text-align: left;
}
.panel_icon1{
  position: absolute;
  /* bottom: 40rpx; */
  left: 4rpx;
  min-width: 22rpx;
  max-width: 22rpx;
  min-height: 30rpx;
  max-height: 30rpx;
}
.panel_local{
  position: absolute;
  bottom: 40rpx;
  padding-left: 50rpx;  
  color: #999;
  font-size: 24rpx;
  text-align:left;
  line-height: 32rpx;
}
.panel_icon2{
  position: absolute;
  bottom: 2rpx;
  min-width: 30rpx;
  max-width: 30rpx;
  min-height: 26rpx;
  max-height: 26rpx;
}

.panel_type{
  position: absolute;
  bottom: -3rpx;
  font-size: 24rpx;
  padding-left:50rpx;  
}
.cutline{
 width: calc(100% - 25*1rpx);/*这里*只有25是因为在手机上使用50过大*/
 margin: 20rpx auto 0 auto;
 padding: 10rpx;  
 height: 1px;
}
.btn_group{
  padding: 12rpx 0 15rpx 0;
  margin-right: 25rpx;
}
.panel_btn,.panel_btn_f{
  width: 120rpx;
  min-width: 120rpx;
  height: 46rpx;  
  padding: 3rpx;
  margin-left: 13rpx;
  background-color: #fff;
  float: right;
  color: #00ADA9;
  font-size: 24rpx;
  line-height: 40rpx;
  vertical-align: middle;
  text-align: center;
  border-radius: 3px;  
}
.panel_btn::after,.panel_btn_f::after{
  border: #00ADA9 1px solid !important;
}
.panel_btn_f{
  color: #fff;
  background-color: #00ADA9;
}
.btn_hover{
  opacity: .7
}
.btn_hover1{
  opacity: .7;
  color: rgb(236, 236, 236);
}
#map{
  width: 0;
  height: 0;
  position: absolute;
  left: 25rpx;
  opacity: 0
}
.panel__nomore{
  position: absolute;
  width: 100%;
  height: calc(100% - 34*1pt); 
  text-align: center;
}
.panel__nomore image:nth-child(1){
  position: relative;
  z-index: 100;
  width: 277rpx;
  height: 218rpx;
  margin-top: 30%;
}
.panel__nomore image:nth-child(3){
  position: fixed;
  width: 100%;
  height: 100%;
  bottom: 0;
  left: 0;
  right: 0
}
.none_text{
  position: relative;
  z-index: 100;
  font-size: 28rpx;
  color: #999999;
}