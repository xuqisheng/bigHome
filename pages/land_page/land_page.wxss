/* pages/land_page/land_page.wxss */

.landPage {
  display: flex;
  flex-direction: column;
  padding: 0px;
  margin: 0px;
  height: 100%;
}

.recommend {
  width: 90%;
  height: 14px;
  margin: auto;
  font-size: 12px;
  text-align: center;
  margin-top: 30px;
  color: #d6d6d6;
  border-top: 1px dashed #000;
  position: relative;
}
.recommend text{
  position: absolute;
  top: -10px;
  left: 35%;
  background: #fff;
  padding: 0 10px;
}
.wxland{
  width: 90%;
  height: 50px;
  background: #00ADA9;
  margin: auto;
  text-align: center;
  margin-top: 25px;
  border-radius: 4px;
  position: relative;
}

.wxland text{
  color: #FFFFFF;
  line-height: 50px;
  font-size: 16px;
  display: inline-block;
  padding-left: 10px;
}
.wxland button{
  position: absolute;
  width:100%;
  height:100%;
  top:0;
  opacity:0;
}
.wxland image{
  width: 24px;
  height: 24px;
  vertical-align:middle;
}
.phoneLand{
  width: 90%;
  height: 50px;
  background: #fff;
  margin: auto;
  text-align: center;
  margin-top: 25px;
  border-radius: 4px;
  border:2px solid #00ADA9;
  box-sizing:border-box;
}
.phoneLand text{
  color: skyblue;
  line-height: 50px;
  font-size: 16px;
  display: inline-block;
  padding-left: 10px;
}
.phoneLand image{
  width: 24px;
  height: 24px;
  vertical-align:middle;
}